{
  "$schema": "https://biomejs.dev/schemas/1.6.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off"
      }
    },
    "ignore": ["node_modules", "dist", ".next"]
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "lineWidth": 80,
      "indentStyle": "tab",
      "lineEnding": "crlf",
      "semicolons": "asNeeded",
      "quoteStyle": "single",
      "trailingComma": "none"
    }
  }
}